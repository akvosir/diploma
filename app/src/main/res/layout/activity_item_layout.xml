<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ItemLayout">

    <TextView
        android:id="@+id/ail_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ail_productImg"
        android:layout_marginTop="60dp"
        android:text="item name"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ail_productAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ail_productName"
        android:layout_marginTop="100dp"
        android:text="added on"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ail_productImg"
        android:layout_width="352dp"
        android:layout_height="198dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="142dp"
        app:srcCompat="@drawable/parker" />

    <TextView
        android:id="@+id/ail_productLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="246dp"
        android:text="http://sdfghjkl.dfghjk/fghnjmk/"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ail_productNote"
        android:layout_width="334dp"
        android:layout_height="97dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="113dp"
        android:text="note"
        android:textAlignment="center" />

    <Button
        android:id="@+id/ail_edit"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/ail_productName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:text="Edit"/>

    <Button
        android:id="@+id/ail_delete"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/ail_productName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:text="Delete"/>

</RelativeLayout>