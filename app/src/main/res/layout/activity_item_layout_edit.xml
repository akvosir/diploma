<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ItemLayoutEdit">

    <TextView
        android:id="@+id/aile_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/aile_productAdded"
        android:layout_marginTop="60dp"
        android:hint="item name"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/aile_productAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="110dp"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/aile_productImg"
        android:layout_width="373dp"
        android:layout_height="215dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/parker" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/aile_productLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aile_productImg"
        android:layout_centerHorizontal="true"
        android:hint="link"
        android:textAlignment="center"
        android:textSize="18sp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/aile_productNote"
        android:layout_width="376dp"
        android:layout_height="109dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"
        android:hint="note"
        android:textAlignment="center" />

    <Button
        android:id="@+id/aile_saveBtn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/aile_productName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:text="Save" />

    <Button
        android:id="@+id/aile_cancelBtn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/aile_saveBtn"
        android:layout_marginEnd="110dp"
        android:text="Cancel" />
</RelativeLayout>