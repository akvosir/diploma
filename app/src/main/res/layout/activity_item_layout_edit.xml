<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.lists.ItemLayoutEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/aile_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:hint="item name"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/aile_productAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="20-08-2018"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/aile_productImg"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="hgfd"
            app:srcCompat="@drawable/parker" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/aile_productLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="link"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="18sp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/aile_productNote"
            android:layout_width="376dp"
            android:layout_height="109dp"
            android:hint="note"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/aile_saveBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Save"
                android:layout_marginEnd="20dp"
                android:theme="@style/buttons"/>

            <Button
                android:id="@+id/aile_cancelBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:theme="@style/buttons"
                android:text="Cancel" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>